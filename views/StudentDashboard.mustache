<!DOCTYPE html>
<html>

<head>
    {{>Header}}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
        }

        .container {
            display: flex;
        }

        .sidemenu {
            width: 250px;
            background-color: #f4f9f9;
            color: black;
            padding: 20px;
        }

        .sidemenu ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .sidemenu li {
            margin-bottom: 10px;
        }

        .sidemenu a {
            color: black;
            text-decoration: none;
            padding: 10px;
            display: inline-block;
            border-radius: 5px;
        }

        .backbutton a {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 20px;
            background-color: white;
            color: black;
            text-decoration: none;
            border: 2px solid black;
            transition: background-color 0.3s, color 0.3s;
        }

        .backbutton a:hover {
            background-color: black;
            color: white;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .welcome h1 {
            font-size: 28px;
            margin-right: 20px;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .user-info div:first-child {
            margin-right: 10px;
            padding: 10px;
            background: #6f42c1;
            color: white;
            border-radius: 5px;
        }

        .user-info div:last-child {
            display: flex;
            flex-direction: column;
        }

        .user-info div:last-child span {
            font-weight: bold;
            margin-bottom: 5px;
        }

        button {
            padding: 5px 10px;
            margin-right: 5px;
            border-radius: 10px;
            color: white;
            background-color: black;
        }

        .opportunities {
            display: flex;
            justify-content: space-between;
        }

        .opportunity-card {
            flex: 1;
            padding: 20px;
            background-color: #f4f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin-right: 10px;
        }

        .opportunity-image {
            width: 100%;
            height: 200px;
            background: url('https://via.placeholder.com/300') center/cover;
            border-radius: 10px;
        }

        .opportunity-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .opportunity-details p {
            margin-right: 10px;
        }

        .opportunity-details a {
            text-decoration: none;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 20px;
            background-color: black;
            border: 1px solid black;
            color: white;
        }

        .opportunity-details a:hover {
            background-color: white;
            color: black;
        }

        .main {
            flex-grow: 1;
            padding: 20px;
            max-width: calc(100% - 250px);
        }
    </style>
</head>

<body>
    <div class="container">
        <aside class="sidemenu">
            <ul>
                <div class="user-info">
                    <div>YX</div>
                    <div>
                        <span>{{ studentName }}</span>
                        <span>{{ studentEmail }}</span>
                    </div>
                </div>
            </ul>

            <div class="logout">
                <li><a href="/student/logout">Logout</a></li>
            </div>
        </aside>

        <div class="main">
            <div class="header">
                <div class="welcome">

                <h1>Welcome {{ studentName }} </h1>
                    <h1>Available Opportunities!</h1>
                </div>

                <div class="backbutton">
                       <a href="/student/login">Back</a>
                </div>
            </div>

            <div class="opportunities">

                {{#allOpportunities}}
                    <div class="opportunity-card">
                        <div class="opportunity-image"></div>
                        <h3 class="opportunity-title">{{ category }}</h3>
                        <div class="opportunity-details">
                            <p>_By {{name}}</p>
                            <a href="/student/addparticipation">Add</a>
                        </div>
                    </div>
                    {{/allOpportunities}}


                <div class="opportunity-card">
                    <div class="opportunity-image"></div>
                    <h3 class="opportunity-title">Good Resume Tips </h3>
                    <div class="opportunity-details">
                        <p>_By sofia Martina</p>
                        <a href="/student/addparticipation">Add</a>
                    </div>
                </div>

            <div class="opportunity-card">
                <div class="opportunity-image"></div>
                <h3 class="opportunity-title">Interview Knowabouts</h3>
                <div class="opportunity-details">
                    <p>_By Malaika Joha</p>
                     <a href="/student/addparticipation">Add</a>
                </div>
            </div>

              <div class="opportunity-card">
                <div class="opportunity-image"></div>
                <h3 class="opportunity-title">Professional Speaking</h3>
                <div class="opportunity-details">
                    <p>Jesse Ememak</p>
                   <a href="/student/addparticipation">Add</a>
                </div>
            </div>

                <!-- Repeat similar structure for other cards -->

            </div>

            <div class="header">
                <div class="welcome">
                    <h1>Selected Opportunities!</h1>
                </div>

                <div class="backbutton">

                </div>
            </div>

            <div class="opportunities">
                <div class="opportunity-card">
                    <div class="opportunity-image"></div>
                    <h3 class="opportunity-title">Networking 101</h3>
                    <div class="opportunity-details">
                        <p>_By sofia Martina</p>
                        <a href="/student/modifyparticipation">Modify</a>
                    </div>
                </div>

            <div class="opportunity-card">
                <div class="opportunity-image"></div>
                <h3 class="opportunity-title">Resume Writing For Beginners</h3>
                <div class="opportunity-details">
                    <p>_By Malaika Joha</p>
                    <a href="/student/addparticipation">Add</a>
                </div>
            </div>

              <div class="opportunity-card">
                <div class="opportunity-image"></div>
                <h3 class="opportunity-title">Professional Speaking</h3>
                <div class="opportunity-details">
                    <p>Interview 101</p>
                   <a href="/student/addparticipation">Add</a>
                </div>
            </div>

                <!-- Repeat similar structure for other cards -->

            </div>
        </div>
    </div>
    <script>
    function goBack() {
        window.history.back();
    }

    
</script>
</body>

</html>
